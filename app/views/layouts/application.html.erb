<!DOCTYPE html>
<html>
  <head>
    <title>CafeteriaManagementSystem</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <script>
        function showCreateItemForm() {
            document.getElementById("selectMenuItemForm").style.display = "none";
            document.getElementById("createMenuItemForm").style.display = "block";
        }

        function showSelectItemForm() {
            document.getElementById("createMenuItemForm").style.display = "none";
            document.getElementById("selectMenuItemForm").style.display = "block";
        }


    </script>

  </head>

  <body>

      <section class="App__header">

          <div class="App__hrline">
              <hr />
          </div>

          <% if flash[:error] %>
              <% flash[:error].each do |msg| %>
                  <div class="App__error">
                      <p class="App__errorText"> <%= msg %> </p>
                  </div>
              <% end %>
          <% end %>

          <% if flash[:info] %>
              <% flash[:info].each do |msg| %>
                  <div class="App__info">
                      <p class="App__infoText"> <%= msg %> </p>
                  </div>
              <% end %>
          <% end %>

      </section>

    <%= yield %>
  </body>
</html>
